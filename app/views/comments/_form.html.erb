<h3>Post a Comment:</h3>
<br>
<%= form_for [ @article, @comment ] do |f| %>
  <p>
    <%= f.label :author_name, "Your name" %><br/>
    <%= f.text_field :author_name, placeholder: 'Let we know who you are' %>
  </p>
  <p>
    <%= f.label :body, "Your Comment" %><br/>
    <%= f.text_area :body, placeholder: 'Enter your comment here' %>
  </p>
  <p>
    <%= f.submit 'Submit' %>
  </p>
<% end %>
