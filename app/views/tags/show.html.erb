
<h1>Articles Tagged with <%= @tag.name %>(<%= @tag.articles.size %>)</h1>

<ul>
  <% @tag.articles.each do |article| %>
    <li><%= link_to article.title, article_path(article) %></li>
  <% end %>
</ul>
<br>
<%= link_to "<< Back to Post List", articles_path %>
<% if logged_in? %>
  <%= link_to 'Edit', edit_tag_path, class: "new_article" %>
<% end %>
<%= link_to 'All Tags', tags_path, class: "new_article" %>
